{% extends 'base.html.twig' %}

{% block title %} Enregistrer{% endblock %}

{% block body %}
    <h1>Register</h1>
  <div class="bg-gray-100 text-gray-900">
    <div class="mt-10 p-8 max-w-md mx-auto">

      {{ form_start(registrationForm, { 'attr': {'class': 'mt-10 p-8 max-w-md mx-auto"'} }) }}
          <h1 class="text-xl font-bold mb-6">Enregistrer mon compte</h1>
          {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': ''}}) }}
          {{ form_widget(registrationForm.email, { 'attr': {'class': 'placeholder-gray-700 w-full border border-gray-400 py-2 px-2 rounded focus:outline-none focus:shadow-outline"'} }) }}
          {{ form_label(registrationForm.plainPassword, 'Mot de Passe', {'label_attr': {'class': ''}}) }}
          {{ form_widget(registrationForm.plainPassword,  { 'attr': {'class': 'placeholder-gray-700 w-full border border-gray-400 py-2 px-2 rounded focus:outline-none focus:shadow-outline"'} }) }} 
          {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mt-10 p-8 max-w-md mx-auto"'} }) }}
          <div>
            <button type="submit" class="w-full transition duration-200 ease-in-out mt-2 mb-6 px-5 py-3 rounded bg-teal-600 text-white shadow hover:bg-teal-700 focus:outline-none focus:shadow-outline">S'enregistrer</button>
          </div>

      {{ form_end(registrationForm) }}
    </div>
  </div>
{% endblock %}


