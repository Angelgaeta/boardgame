{% extends 'base.html.twig' %}

{% block title %}GameController!{% endblock %}

{% block body %}
    <h1 class="mt-2 text-xl text-center leading-7 font-bold text-gray-900">Liste des jeux</h1>
    <div class="container my-12 mx-auto px-4 md:px-12">
        <div class="flex flex-wrap -mx-1 lg:-mx-4">

            <!-- Column -->
            {% for game in games %}
            <div class="my-2 px-1 w-full md:w-1/2 lg:my-4 lg:px-4 lg:w-1/3">

                <!-- Article -->
                <article class="overflow-hidden rounded-lg shadow-2xl">

                    <a href="#">
                        <img alt="Placeholder" class="block h-auto w-full" src="https://picsum.photos/600/400/?random">
                    </a>

                    <header class="flex items-center justify-between leading-tight p-2 md:p-4">
                            <div class="flex-1">
                                <p class="text-sm leading-5 font-medium text-teal-600">
                                <a href="#" class="hover:underline">
                                   {# {{ game.categories }} #} Categorie
                                </a>
                                </p>
                                <a href="#" class="block">
                                <h3 class="mt-2 text-xl leading-7 font-semibold text-gray-900">
                                    {{ game.title }}
                                </h3>
                                <p class="mt-3 text-base leading-6 text-gray-500">
                                    {{ game.description|slice(0,70)~'...'  }}
                                </p>
                                </a>
                            </div>
                    </header>

                    <footer class="flex items-center justify-between leading-none p-2 md:p-4">
                        <a href="{{ path("app_show_game", {id: game.id}) }}" class="flex items-center no-underline hover:underline text-black">
                            <p class="ml-2 text-sm">
                                Voir plus...
                            </p>
                        </a>
                        <a class=" iconheart no-underline text-grey-darker hover:text-red-dark" href="#">
                            <span class="hidden">Like</span>
                            <i class="fa fa-heart"></i>
                        </a>
                    </footer>

                </article>
                <!-- END Article -->

            </div>
            <!-- END Column -->
            {% endfor %}


        </div>
    </div>
    </div>

    

{% endblock %}
